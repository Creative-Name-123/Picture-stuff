import os
import sys
from PIL import Image
from PIL import ImageFilter

response = []
im = Image.open("mona lisa.jfif")
out = im.filter(ImageFilter.DETAIL)  # I think this is supposed to help the brightening thing
print("Would you like to convert your image to a JPEG?")
response.append(input())
if response[-1].lower() == "yes":  # Doesn't work
    for infile in sys.argv[1:]:
        f, e = os.path.splitext(infile)
        outfile = f + ".jpg"
        if infile != outfile:
            try:
                with Image.open(infile) as im:
                    im.save(outfile, "JPEG")
            except OSError:
                print("cannot convert", infile)
print(im.format, im.size, im.mode)
print("Middle point: (" + str(im.size[0]/2) + ", " + str(im.size[1]/2) + ")")
moreRectEdits = True
while moreRectEdits:
    print("Enter the coordinates of the rectangle that you want to edit (enter 0, 0, " + str(im.size[0]) + ", " + str(im.size[1]) + " to edit the entire image)")
    print("x1:")
    response.append(int(input()))
    print("y1:")
    response.append(int(input()))
    print("x2:")
    response.append(int(input()))
    print("y2:")
    response.append(int(input()))
    box = (response[-4], response[-3], response[-2], response[-1])
    region = im.crop(box)
    print("rotate clockwise:")
    response.append(input())
    if not response[-1].lower() == "no":
        region = region.rotate(360-int(response[-1]))
    print("Flip uppy downy?")
    response.append(input())
    if response[-1].lower() == "yes":
        region = region.transpose(Image.Transpose.FLIP_TOP_BOTTOM)
    print("Flip lefty righty?")
    response.append(input())
    if response[-1].lower() == "yes":
        region = region.transpose(Image.Transpose.FLIP_LEFT_RIGHT)
    im.paste(region, box)
    print("How much do you want to brighten this rectangle? Enter \"1\" to not change anything.")
    response.append(int(input()))
    region = region.point(lambda i: i * response[-1])  # This doesn't do anything for some reason
    print("Edit another rectangle?")
    response.append(input())
    if not response[-1].lower() == "yes":
        moreRectEdits = False

im.show()
print("Your responses:")
for j in range(len(response)):
    print(response[j])
